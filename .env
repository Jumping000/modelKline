# OKX API 配置
OKX_API_KEY=your_api_key
OKX_SECRET_KEY=your_secret_key
OKX_PASSPHRASE=your_passphrase
OKX_API_ENDPOINT=https://www.okx.com
OKX_WS_ENDPOINT=wss://ws.okx.com:8443/ws/v5/public

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=okx_trading_system
DB_PASSWORD=okx_trading_system
DB_NAME=okx_trading_system
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=30000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 日志配置
LOG_LEVEL=info
LOG_DIRECTORY=./logs

# 大模型API配置 - 默认提供商
LLM_DEFAULT_PROVIDER=gemini  # gemini, openai, spark, baidu, volcengine, kimi

# Google Gemini配置
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-pro

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# 讯飞星火配置
SPARK_API_KEY=your_spark_api_key
SPARK_API_SECRET=your_spark_api_secret
SPARK_APP_ID=your_spark_app_id
SPARK_MODEL=v3.5

# 百度文心一言配置
BAIDU_API_KEY=your_baidu_api_key
BAIDU_SECRET_KEY=your_baidu_secret_key
BAIDU_MODEL=ernie-bot-4

# 字节火山引擎配置
VOLCENGINE_ACCESS_KEY=your_volcengine_access_key
VOLCENGINE_SECRET_KEY=your_volcengine_secret_key
VOLCENGINE_MODEL=skylark-chat

# Kimi配置
KIMI_API_KEY=your_kimi_api_key
KIMI_MODEL=moonshot-v1

# 系统配置
NODE_ENV=development
PORT=3000 
{
  "system": {
    "name": "OKX量化交易系统",
    "version": "0.1.0",
    "logLevel": "info",
    "maxLogFileSize": "10m",
    "maxLogFiles": 10,
    "timeZone": "Asia/Shanghai"
  },
  "market": {
    "defaultSymbol": "UNI-USDT",
    "supportedSymbols": ["BTC-USDT", "ETH-USDT", "SOL-USDT", "UNI-USDT"],
    "defaultKlineInterval": "1m",
    "supportedIntervals": ["1m", "5m", "15m", "30m", "1h", "4h", "1d"]
  },
  "agents": {
    "kLinePatternAgent": {
      "enabled": true,
      "weight": 0.8,
      "parameters": {
        "patterns": ["hammer", "shootingStar", "doji", "engulfing"]
      }
    },
    "candlestickPatternAgent": {
      "enabled": true,
      "weight": 0.7,
      "parameters": {
        "patterns": ["headAndShoulders", "doubleTop", "doubleBottom", "triangle"]
      }
    },
    "marketSentimentAgent": {
      "enabled": true,
      "weight": 0.6,
      "parameters": {
        "dataWindow": 24,
        "updateInterval": 3600
      }
    }
  },
  "trading": {
    "riskManagement": {
      "maxPositionSize": 0.1,
      "stopLossPercentage": 0.02,
      "takeProfitPercentage": 0.05,
      "maxDrawdown": 0.15
    },
    "executionSettings": {
      "orderType": "limit",
      "slippageTolerance": 0.001,
      "retryAttempts": 3,
      "retryDelay": 1000
    }
  },
  "database": {
    "connectionPoolSize": 10,
    "connectionTimeout": 30000,
    "queryTimeout": 5000
  },
  "cache": {
    "ttlSeconds": 300,
    "maxCacheSize": "1gb",
    "preloadMarketData": true
  },
  "llm": {
    "defaultProvider": "gemini",
    "requestTimeout": 30000,
    "maxRetryAttempts": 2,
    "providers": {
      "gemini": {
        "model": "gemini-pro",
        "temperature": 0.4,
        "maxTokens": 1024
      },
      "openai": {
        "model": "gpt-3.5-turbo",
        "temperature": 0.5,
        "maxTokens": 1024
      }
    }
  }
}
